<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/view_splash_screen</item>
    </style>

    <style name="TextSmall" parent="TextParent">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="TextSmall.Bold" parent="TextSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="TextParent">
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="TextMedium.Bold" parent="TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium.Bold.White" parent="TextMediumWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLarge" parent="TextParent">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="TextLargeWhite" parent="TextParentWhite">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="TextMediumWhite" parent="TextParentWhite">
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="TextLarge.Bold" parent="TextLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLarge.Bold.White" parent="TextLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeading" parent="TextParent">
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="TextHeading.Bold" parent="TextHeading">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextParent">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextParentWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>